<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_societyblue"
    tools:context=".loginScreen">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:elevation="60dp"
        android:translationZ="90dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/register_societyblue"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#004778" />


        <EditText
            android:id="@+id/plotNo"
            android:textColorHint="#E9E8E8"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/bg"
            android:backgroundTint="#004777"
            android:layout_marginEnd="10dp"
            android:hint="Plot No."
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/societyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:singleLine="true"
            android:textColorHint="#E9E8E8"
            android:layout_marginTop="260dp"
            android:background="@drawable/bg"
            android:backgroundTint="#004777"
            android:hint="Society Name"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="30dp" />


        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="serif"
            android:paddingStart="10dp"
            android:text="Register"
            android:textAlignment="center"
            android:textColor="#004778"
            android:textSize="40sp"
            android:textStyle="bold" />


        <EditText
            android:textColorHint="#E9E8E8"
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="340dp"
            android:singleLine="true"
            android:background="@drawable/bg"
            android:backgroundTint="#004777"
            android:hint="City"
            android:paddingStart="10dp"
            android:shadowDy="100"
            android:textColor="@color/white"
            android:textSize="30sp" />


        <EditText
            android:textColorHint="#E9E8E8"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/bg"
            android:backgroundTint="#004777"
            android:hint="Address"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageButton
            android:background="@drawable/bg"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:id="@+id/regBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="530dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#00FFFF00"
            android:paddingStart="45dp"
            android:paddingTop="10dp"
            android:paddingEnd="45dp"
            android:paddingBottom="10dp"
            android:shadowColor="#000000"
            android:shadowDx="50"
            android:shadowDy="50"
            android:textSize="25dp"
            app:cornerRadius="20dp"
            app:tint="@color/white" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>