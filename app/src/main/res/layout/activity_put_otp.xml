<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".putOtp"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_marginTop="90dp"
            android:layout_height="260dp"
            android:src="@drawable/otp01"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP Verification"
            android:textSize="20sp"
            android:textColor="#80C829"
            android:layout_marginTop="30dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter the OTP sent to you"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            />
        <TextView
            android:id="@+id/shareMobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:layout_marginEnd="3dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/otpbox1"
                android:importantForAutofill="no"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <EditText
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/otpbox2"
                android:importantForAutofill="no"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>
            <EditText
                android:layout_marginEnd="3dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/otpbox3"
                android:importantForAutofill="no"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <EditText
                android:layout_marginEnd="3dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/otpbox4"
                android:importantForAutofill="no"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <EditText
                android:layout_marginEnd="3dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/otpbox5"
                android:importantForAutofill="no"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <EditText
                android:layout_marginEnd="3dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/box"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/otpbox6"
                android:importantForAutofill="no"
                android:imeOptions="actionNext"
                android:maxLength="1"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>
        <TextView
            android:id="@+id/resendotp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="85dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Resend OTP"
            android:textSize="15sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnverOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:elevation="50dp"
            android:backgroundTint="#80C729"
            android:textColor="@color/black"
            android:layout_marginEnd="60dp"
            android:translationZ="50dp"
            android:layout_marginStart="60dp"
            android:textSize="15sp"
            android:layout_marginTop="20dp"/>
            <ProgressBar
                android:id="@+id/progressbarverify"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>
    </LinearLayout>


</ScrollView>