<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".joinSociety"
    android:background="@drawable/register_societyblue">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:elevation="60dp"
        android:translationZ="90dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/register_societyblue"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#004879"
            tools:ignore="ContentDescription" />


        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg"
            android:hint="Society Code"
            android:importantForAutofill="no"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="30sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TouchTargetSizeCheck" />


        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:fontFamily="serif"
            android:paddingStart="10dp"
            android:text="Join Society"
            android:textAlignment="center"
            android:textColor="#130C46"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <TextView
            android:visibility="invisible"
            android:id="@+id/societyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="320dp"
            android:singleLine="true"
            android:background="@drawable/bg"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/cityName"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="380dp"
            android:background="@drawable/bg"
            android:layout_marginEnd="10dp"

            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/plotNo"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="260dp"
            android:singleLine="true"
            android:background="@drawable/bg"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"

            tools:ignore="HardcodedText,RtlSymmetry" />

        <ImageButton
            android:visibility="gone"
            android:background="@drawable/bg"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:id="@+id/joinBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#00FFFF00"
            android:paddingStart="45dp"
            android:paddingTop="10dp"
            android:paddingEnd="45dp"
            android:paddingBottom="10dp"
            android:shadowDx="50"
            android:shadowDy="50"
            android:textSize="25sp"
            app:cornerRadius="20dp"
            tools:ignore="ContentDescription"
            app:tint="@color/white" />

        <Button
            android:id="@+id/checkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="Check"
            android:layout_marginTop="430dp"
            android:backgroundTint="#004879"
            android:textColor="@color/white"
            android:paddingStart="45dp"
            android:paddingTop="10dp"
            android:paddingEnd="45dp"
            android:paddingBottom="10dp"
            android:shadowColor="#000000"
            android:shadowDx="50"
            android:shadowDy="50"
            android:textSize="15sp"
            app:cornerRadius="20dp"
            app:tint="#4A4F58"
            tools:ignore="HardcodedText" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>